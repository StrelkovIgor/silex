{% extends "html/index.twig" %}
{% set active = 'login' %}

{% block body %}
<div id="main" role="main" class="container">
    <h1>{{ 'Login'|trans }}</h1>
	{% if error.count %}
		<div class="alert alert-error">
			{{ form_errors(form)  }}
			
		</div>
	{% endif %}

        <form action="{{ path('login_check') }}" method="post" class="form-vertical">
			{{ form_row(form.username) }}
			{{ form_row(form.password) }}
			{{ form_row(form.login) }}
        </form>
	</div>
{% endblock %}