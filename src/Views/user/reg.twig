{% extends "html/index.twig" %}
{% set active = 'reg' %}

{% block body %}
    <div id="main" role="main" class="container">
    <h1>{{ 'Registration'|trans }}</h1>
	{% if error.count %}
		<div class="alert alert-error">
			{{ form_errors(form)  }}
			
		</div>
	{% endif %}

        <form action="{{ path('reg') }}" method="post" class="form-vertical">
			{{ form_row(form.username) }}
			{{ form_row(form.mail) }}
			{{ form_row(form.password) }}
			{{ form_row(form.save) }}
        </form>
	</div>
{% endblock %}